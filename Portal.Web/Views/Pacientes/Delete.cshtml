@model GestaoSaudeIdosos.Web.ViewModels.PacienteDetalheViewModel
@{
    ViewData["Title"] = "Excluir paciente";
}

<section class="page-header">
    <div>
        <h1>Excluir paciente</h1>
        <p class="page-subtitle">Esta ação removerá o cadastro do paciente e seu histórico associado.</p>
    </div>
    <a asp-action="Index" class="btn-link"
       data-open-tab data-close-current-tab data-tab="Pacientes" data-url='@Url.Action("Index", "Pacientes")'>Cancelar</a>
</section>

<div class="alert danger">
    Tem certeza que deseja remover <strong>@Model.Nome</strong>? A exclusão é definitiva.
</div>

<form asp-action="Delete" method="post"
      data-success-tab="Pacientes"
      data-success-url='@Url.Action("Index", "Pacientes")'
      data-close-on-success="true">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PacienteId)
    <button type="submit" class="btn-danger">Excluir paciente</button>
    <a asp-action="Index" class="btn-secondary"
       data-open-tab data-close-current-tab data-tab="Pacientes" data-url='@Url.Action("Index", "Pacientes")'>Manter cadastro</a>
</form>
