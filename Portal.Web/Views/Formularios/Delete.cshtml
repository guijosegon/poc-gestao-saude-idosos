@model GestaoSaudeIdosos.Web.ViewModels.FormularioDetalheViewModel
@{
    ViewData["Title"] = "Excluir formulário";
}

<section class="page-header">
    <div>
        <h1>Excluir formulário</h1>
        <p class="page-subtitle">Remova o instrumento da biblioteca desta prova de conceito.</p>
    </div>
    <a asp-action="Index" class="btn-link"
       data-open-tab data-close-current-tab data-tab="Formulários" data-url='@Url.Action("Index", "Formularios")'>Cancelar</a>
</section>

<div class="alert danger">
    <p>
        Ao confirmar, o formulário <strong>@Model.Descricao</strong> será removido da interface demonstrativa.
        Nenhuma informação operacional será impactada.
    </p>
</div>

<form asp-action="Delete" method="post"
      data-success-tab="Formulários"
      data-success-url='@Url.Action("Index", "Formularios")'
      data-close-on-success="true">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.FormularioId)
    <button type="submit" class="btn-danger">Excluir agora</button>
    <a asp-action="Index" class="btn-secondary"
       data-open-tab data-close-current-tab data-tab="Formulários" data-url='@Url.Action("Index", "Formularios")'>Manter formulário</a>
</form>
