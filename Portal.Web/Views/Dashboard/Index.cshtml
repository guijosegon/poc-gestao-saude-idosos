@model GestaoSaudeIdosos.Web.ViewModels.DashboardConfigViewModel
@{
    ViewData["Title"] = "Configurar dashboard";
    var graficos = Model.GraficosDisponiveis?.ToList() ?? new List<GestaoSaudeIdosos.Web.ViewModels.DashboardGraficoViewModel>();
}

<section class="page-header">
    <div>
        <h1>Configuração do dashboard</h1>
        <p class="page-subtitle">Escolha quais gráficos e indicadores serão exibidos na tela inicial do portal.</p>
    </div>
</section>

<form asp-action="Index" method="post" class="form-card" novalidate>
    @Html.AntiForgeryToken()

    <div class="form-grid">
        <div class="form-group">
            @Html.LabelFor(m => m.Tema)
            @Html.DropDownListFor(m => m.Tema, Model.TemasDisponiveis, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PeriodoPadrao)
            @Html.DropDownListFor(m => m.PeriodoPadrao, Model.OpcoesPeriodo, new { @class = "form-control" })
        </div>

        <div class="form-group form-switch">
            <label class="switch-label">
                @Html.CheckBoxFor(m => m.MostrarAlertas)
                <span>@Html.DisplayNameFor(m => m.MostrarAlertas)</span>
            </label>
        </div>

        <div class="form-group form-switch">
            <label class="switch-label">
                @Html.CheckBoxFor(m => m.MostrarResumoAtendimentos)
                <span>@Html.DisplayNameFor(m => m.MostrarResumoAtendimentos)</span>
            </label>
        </div>
    </div>

    <section class="detail-card">
        <h2>Gráficos disponíveis</h2>
        <div class="checkbox-grid">
        @foreach (var grafico in graficos)
        {
            var selecionado = Model.GraficosSelecionados.Contains(grafico.GraficoId);
            <label class="checkbox-card">
                <input type="checkbox" name="GraficosSelecionados" value="@grafico.GraficoId" @(selecionado ? "checked" : string.Empty) />
                <span>
                    <strong>@grafico.Descricao</strong>
                </span>
            </label>
        }
        </div>
    </section>

    <section class="detail-card">
        <h2>Filtros rápidos salvos</h2>
        <ul class="pill-list">
        @foreach (var filtro in Model.FiltrosFavoritos)
        {
            <li>@filtro</li>
        }
        </ul>
    </section>

    <div class="form-actions">
        <button type="submit" class="btn-primary">Salvar preferências</button>
    </div>
</form>
