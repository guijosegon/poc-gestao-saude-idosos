@model GestaoSaudeIdosos.Web.ViewModels.UsuarioDetalheViewModel
@{
    ViewData["Title"] = "Excluir usuário";
}

<section class="page-header">
    <div>
        <h1>Excluir usuário</h1>
        <p class="page-subtitle">Somente administradores (ou o próprio profissional) podem executar esta ação.</p>
    </div>
    <a asp-action="Index" class="btn-link"
       data-open-tab data-close-current-tab data-tab="Usuarios" data-url='@Url.Action("Index", "Usuarios")'>Cancelar</a>
</section>

<div class="alert danger">
    Tem certeza que deseja excluir o usuário <strong>@Model.Nome</strong>? Após confirmar ele perderá o acesso ao portal.
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UsuarioId)
    <input type="hidden" name="email" value="@Model.Email" />
    <button type="submit" class="btn-danger">Excluir usuário</button>
    <a asp-action="Index" class="btn-secondary"
       data-open-tab data-close-current-tab data-tab="Usuários" data-url='@Url.Action("Index", "Usuarios")'>Manter usuário</a>
</form>
