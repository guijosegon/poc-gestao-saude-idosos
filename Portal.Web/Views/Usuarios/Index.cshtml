@model IEnumerable<GestaoSaudeIdosos.Web.ViewModels.UsuarioListItemViewModel>
@{
    ViewData["Title"] = "Usuários";
}

<section class="page-header">
    <div>
        <h1>Gestão de usuários</h1>
        <p class="page-subtitle">Cadastre e acompanhe os profissionais com acesso ao portal.</p>
    </div>
    @if (User.IsInRole("Administrador"))
    {
        <a asp-action="Create" class="btn-primary" data-open-tab data-tab="Usuários" data-url='@Url.Action("Create", "Usuarios")'>Novo usuário</a>
    }
</section>

@if (!Model.Any())
{
    <div class="empty-state">
        <p>Nenhum usuário cadastrado até o momento.</p>
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Create" class="btn-link" data-open-tab data-tab="Usuários" data-url='@Url.Action("Create", "Usuarios")'>Clique aqui para cadastrar o primeiro usuário.</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Usuário</th>
                    <th>E-mail</th>
                    <th>Perfil</th>
                    <th>Status</th>
                    <th>Cadastro</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.UsuarioId</td>
                        <td>
                            <div class="table-avatar">
                                <img src="@(string.IsNullOrWhiteSpace(usuario.ImagemPerfil) ? Url.Content("~/images/avatar-generico.svg") : usuario.ImagemPerfil)"
                                     alt="Foto de @usuario.NomeCompleto"
                                     class="avatar avatar-sm" />
                                <div class="table-avatar__info">
                                    <strong>@usuario.NomeCompleto</strong>
                                </div>
                            </div>
                        </td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Perfil</td>
                        <td>
                            <span class="status-badge @(usuario.Ativo ? "success" : "danger")">
                                @(usuario.Ativo ? "Ativo" : "Inativo")
                            </span>
                        </td>
                        <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                        <td class="table-actions">
                            <a asp-action="Details" asp-route-id="@usuario.UsuarioId" class="btn-link"
                               data-open-tab data-tab="Usuários"
                               data-url='@Url.Action("Details", "Usuarios", new { id = usuario.UsuarioId })'>Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@usuario.UsuarioId" class="btn-link"
                               data-open-tab data-tab="Usuários"
                               data-url='@Url.Action("Edit", "Usuarios", new { id = usuario.UsuarioId })'>Editar</a>
                            @if (User.IsInRole("Administrador") || string.Equals(User.Identity?.Name, usuario.Email, StringComparison.OrdinalIgnoreCase))
                            {
                                <a asp-action="Delete" asp-route-id="@usuario.UsuarioId" class="btn-link text-danger"
                                   data-open-tab data-tab="Usuários"
                                   data-url='@Url.Action("Delete", "Usuarios", new { id = usuario.UsuarioId })'>Excluir</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


@section Scripts {
    <script>
        (function () {
            const scriptElement = document.currentScript;
            const container = scriptElement ? scriptElement.closest(".conteudo") : null;
            const destino = "Usuarios";
            const urlDestino = `@Url.Action("Index", "Usuarios")`;

            if (!container || !container.id) {
                return;
            }

            const prefixo = "conteudo-";
            if (!container.id.startsWith(prefixo)) {
                return;
            }

            const abaAtual = container.id.substring(prefixo.length);
            if (abaAtual === destino) {
                return;
            }

            fecharAba(abaAtual);
            abrirAba(destino, urlDestino);
        })();
    </script>
}