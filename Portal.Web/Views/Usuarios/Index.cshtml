@model IEnumerable<GestaoSaudeIdosos.Web.ViewModels.UsuarioListItemViewModel>
@{
    ViewData["Title"] = "Usuários";
}

<section class="page-header">
    <div>
        <h1>Gestão de usuários</h1>
        <p class="page-subtitle">Cadastre e acompanhe os profissionais com acesso ao portal.</p>
    </div>
    @if (User.IsInRole("Administrador"))
    {
        <a asp-action="Create" class="btn-primary">Novo usuário</a>
    }
</section>

@if (!Model.Any())
{
    <div class="empty-state">
        <p>Nenhum usuário cadastrado até o momento.</p>
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Create" class="btn-link">Clique aqui para cadastrar o primeiro usuário.</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Perfil</th>
                    <th>Status</th>
                    <th>Cadastro</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Perfil</td>
                    <td>
                        <span class="status-badge @(usuario.Ativo ? "success" : "danger")">
                            @(usuario.Ativo ? "Ativo" : "Inativo")
                        </span>
                    </td>
                    <td>@usuario.DataCadastro.ToString("dd/MM/yyyy")</td>
                    <td class="table-actions">
                        <a asp-action="Details" asp-route-id="@usuario.UsuarioId" class="btn-link">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@usuario.UsuarioId" class="btn-link">Editar</a>
                        @if (User.IsInRole("Administrador") || string.Equals(User.Identity?.Name, usuario.Email, StringComparison.OrdinalIgnoreCase))
                        {
                            <a asp-action="Delete" asp-route-id="@usuario.UsuarioId" class="btn-link text-danger">Excluir</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
