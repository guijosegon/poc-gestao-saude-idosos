@model GestaoSaudeIdosos.Web.ViewModels.CamposIndexViewModel
@{ 
    ViewData["Title"] = "Campos";
}

<section class="page-header">
    <div>
        <h1>Campos configuráveis</h1>
        <p class="page-subtitle">Personalize as perguntas que serão reutilizadas nos formulários clínicos.</p>
    </div>
    <a asp-action="Create" class="btn-primary" data-open-tab data-tab="Campo" data-url='@Url.Action("Create", "Campos")'>Novo campo</a>
</section>

<form method="get" class="filters" action="@Url.Action("Index", "Campos")">
    <div class="filters__row">
        <div class="form-group">
            <label for="Busca">Buscar</label>
            <input type="text" id="Busca" name="Busca" value="@Model.Filtro.Busca" class="form-control" placeholder="Descrição do campo" />
        </div>
        <div class="form-group">
            <label for="Tipo">Tipo</label>
            <select id="Tipo" name="Tipo" class="form-control">
                <option value="">Todos</option>
                @foreach (var tipo in Model.TiposCampo)
                {
                    var selecionado = string.Equals(tipo.Value, Model.Filtro.Tipo?.ToString(), System.StringComparison.OrdinalIgnoreCase);
                    <option value="@tipo.Value" @(selecionado ? "selected" : null)>@tipo.Text</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="Ativo">Status</label>
            <select id="Ativo" name="Ativo" class="form-control">
                <option value="">Todos</option>
                <option value="true" @(Model.Filtro.Ativo == true ? "selected" : null)>Somente ativos</option>
                <option value="false" @(Model.Filtro.Ativo == false ? "selected" : null)>Somente inativos</option>
            </select>
        </div>
        <div class="form-group">
            <label for="ItensPorPagina">Itens por página</label>
            <select id="ItensPorPagina" name="ItensPorPagina" class="form-control">
                @{ var tamanhos = new[] { 10, 25, 50 }; }
                @foreach (var tamanho in tamanhos)
                {
                    <option value="@tamanho" @(Model.Filtro.ItensPorPagina == tamanho ? "selected" : null)>@tamanho</option>
                }
            </select>
        </div>
    </div>
    <input type="hidden" name="Pagina" value="1" />
    <div class="filters__actions">
        <button type="submit" class="btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn-link">Limpar filtros</a>
    </div>
</form>

@if (Model.Paginacao.TotalRegistros == 0)
{
    <div class="empty-state">
        <p>Nenhum campo encontrado com os filtros atuais.</p>
    </div>
}
else
{
    var inicio = ((Model.Paginacao.PaginaAtual - 1) * Model.Paginacao.ItensPorPagina) + 1;
    var fim = Math.Min(Model.Paginacao.PaginaAtual * Model.Paginacao.ItensPorPagina, Model.Paginacao.TotalRegistros);

    <p class="table-summary">Exibindo @inicio - @fim de @Model.Paginacao.TotalRegistros registros.</p>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Descrição</th>
                    <th>Tipo</th>
                    <th>Responsável</th>
                    <th>Formulários</th>
                    <th>Cadastro</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var campo in Model.Registros)
            {
                <tr>
                    <td>
                        <strong>@campo.Descricao</strong>
                    </td>
                    <td>@campo.Tipo</td>
                    <td>@(string.IsNullOrEmpty(campo.Responsavel) ? "-" : campo.Responsavel)</td>
                    <td>@campo.FormulariosVinculados</td>
                    <td>@campo.DataCadastro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="status-badge @(campo.Ativo ? "success" : "warning")">@(campo.Ativo ? "Ativo" : "Inativo")</span>
                    </td>
                    <td class="table-actions">
                        <a asp-action="Details" asp-route-id="@campo.CampoId" class="btn-link"
                               data-open-tab data-tab="Campos"
                           data-url='@Url.Action("Details", "Campos", new { id = campo.CampoId })'>Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@campo.CampoId" class="btn-link"
                               data-open-tab data-tab="Campos"
                           data-url='@Url.Action("Edit", "Campos", new { id = campo.CampoId })'>Editar</a>
                        <a asp-action="Delete" asp-route-id="@campo.CampoId" class="btn-link text-danger"
                               data-open-tab data-tab="Campos"
                           data-url='@Url.Action("Delete", "Campos", new { id = campo.CampoId })'>Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    if (Model.Paginacao.TotalPaginas > 1)
    {
        <nav class="pagination-nav" aria-label="Paginação de campos">
            <ul class="pagination">
                <li class="page-item @(Model.Paginacao.PossuiPaginaAnterior ? string.Empty : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-Pagina="@Model.Paginacao.PrimeiraPagina"
                       asp-route-Busca="@Model.Filtro.Busca"
                       asp-route-Tipo="@Model.Filtro.Tipo"
                       asp-route-Ativo="@Model.Filtro.Ativo"
                       asp-route-ItensPorPagina="@Model.Filtro.ItensPorPagina">Primeira</a>
                </li>
                <li class="page-item @(Model.Paginacao.PossuiPaginaAnterior ? string.Empty : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-Pagina="@Model.Paginacao.PaginaAnterior"
                       asp-route-Busca="@Model.Filtro.Busca"
                       asp-route-Tipo="@Model.Filtro.Tipo"
                       asp-route-Ativo="@Model.Filtro.Ativo"
                       asp-route-ItensPorPagina="@Model.Filtro.ItensPorPagina">Anterior</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">Página @Model.Paginacao.PaginaAtual de @Model.Paginacao.TotalPaginas</span>
                </li>
                <li class="page-item @(Model.Paginacao.PossuiProximaPagina ? string.Empty : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-Pagina="@Model.Paginacao.ProximaPagina"
                       asp-route-Busca="@Model.Filtro.Busca"
                       asp-route-Tipo="@Model.Filtro.Tipo"
                       asp-route-Ativo="@Model.Filtro.Ativo"
                       asp-route-ItensPorPagina="@Model.Filtro.ItensPorPagina">Próxima</a>
                </li>
                <li class="page-item @(Model.Paginacao.PossuiProximaPagina ? string.Empty : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-Pagina="@Model.Paginacao.UltimaPagina"
                       asp-route-Busca="@Model.Filtro.Busca"
                       asp-route-Tipo="@Model.Filtro.Tipo"
                       asp-route-Ativo="@Model.Filtro.Ativo"
                       asp-route-ItensPorPagina="@Model.Filtro.ItensPorPagina">Última</a>
                </li>
            </ul>
        </nav>
    }
}

@section Scripts {
    <script>
        (function () {
            const scriptElement = document.currentScript;
            const container = scriptElement ? scriptElement.closest(".conteudo") : null;
            const destino = "Campos";
            const urlDestino = `@Url.Action("Index", "Campos")`;

            if (!container || !container.id) {
                return;
            }

            const prefixo = "conteudo-";
            if (!container.id.startsWith(prefixo)) {
                return;
            }

            const abaAtual = container.id.substring(prefixo.length);
            if (abaAtual === destino) {
                return;
            }

            fecharAba(abaAtual);
            abrirAba(destino, urlDestino);
        })();
    </script>
}
