@model GestaoSaudeIdosos.Web.ViewModels.GraficoFormViewModel
@{
    ViewData["Title"] = "Editar gráfico";
}

<section class="page-header">
    <div>
        <h1>Editar gráfico</h1>
        <p class="page-subtitle">Ajuste os dados de origem, campos analisados e aparência da visualização.</p>
    </div>
    <a asp-action="Details" asp-route-id="@Model.GraficoId" class="btn-link"
       data-open-tab data-tab="Gráficos"
       data-url='@Url.Action("Details", "Graficos", new { id = Model.GraficoId })'>Ver detalhes</a>
</section>

<form action="@Url.Action("Edit", "Graficos", new { id = Model.GraficoId })" method="post" class="form-card" novalidate
      data-grafico-form
      data-preview-url='@Url.Action("Preview", "Graficos")'
      data-campos-url='@Url.Action("CamposFormulario", "Graficos")'
      data-success-tab="Gráficos"
      data-success-url='@Url.Action("Index", "Graficos")'
      data-close-on-success="true">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GraficoId)

    @Html.Partial("_FormFields", Model)

    <div class="form-actions">
        <button type="submit" class="btn-primary">Salvar alterações</button>
        <a asp-action="Index" class="btn-secondary"
           data-open-tab data-close-current-tab data-tab="Gráficos" data-url='@Url.Action("Index", "Graficos")'>Cancelar</a>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (window.Graficos) {
                window.Graficos.initializeForms(document);
            }
        });
    </script>
}
