@model GestaoSaudeIdosos.Web.ViewModels.GraficoFormViewModel
@{
    ViewData["Title"] = "Novo gráfico";
}

<section class="page-header">
    <div>
        <h1>Novo gráfico</h1>
        <p class="page-subtitle">Transforme respostas de formulários em visualizações do Google Charts.</p>
    </div>
    <a asp-action="Index" class="btn-link"
       data-open-tab data-close-current-tab data-tab="Gráficos" data-url='@Url.Action("Index", "Graficos")'>Voltar</a>
</section>

<form action="@Url.Action("Create", "Graficos")" method="post" class="form-card" novalidate
      data-success-tab="Gráficos"
      data-success-url='@Url.Action("Index", "Graficos")'
      data-close-on-success="true">
    @Html.AntiForgeryToken()
    <div class="form-grid">
        <div class="form-group">
            @Html.LabelFor(m => m.Descricao)
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", placeholder = "Ex.: Evolução da pressão arterial" })
            @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "field-validation-error" })
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-primary">Salvar gráfico</button>
        <a asp-action="Index" class="btn-secondary"
           data-open-tab data-close-current-tab data-tab="Gráficos" data-url='@Url.Action("Index", "Graficos")'>Cancelar</a>
    </div>
</form>
